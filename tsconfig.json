{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "module": "es2020", // 或者 es2022, esnext, node16 之类的版本
    "target": "es2020", // 这里也可以选个更高的版本以匹配 module
    "baseUrl": "src",
    "jsx": "react-jsx",
    "paths": {
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
